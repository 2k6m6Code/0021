	    		    	    if ( $protocolandport2[1] eq '' ) { $protocol_parameter='-p '.$protocolandport2[0]; }
	    		    	    else { $protocol_parameter='-p '.$protocolandport2[0].' '.$dir_port.' '.$protocolandport2[1]; }
