sub maintainQoSISP2
{
    my (%action)=@_;
    my $ispref=XMLread($gPATH.'basic.xml');
    my $isplist=$ispref->{isp};
    
    if ( $action{action} eq 'SAVE' )
    {
        my $qos = $action{qos};
        my @tmp;
        foreach my $item ( @$qos )
        {
            push(@tmp, $item);

            LogUserAction( action=>'SAVETMVQOSISP', qos=>$item );
        }
        foreach my $isp ( @$isplist )
        {
            if ( $isp->{isptype} eq 'dtunnel' )
            {
                $isp->{qos} = $tmp[0];
                shift @tmp;
            }
        }
    }
    XMLwrite($ispref, $gPATH."basic.xml");    
}
