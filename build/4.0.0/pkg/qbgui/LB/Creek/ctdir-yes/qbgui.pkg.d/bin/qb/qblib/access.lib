    	    	    			if ( $host->{hostname} eq $item->{source} )      { $sourceip=$host->{hostaddress}; 	$muti_source=1; }
    	    	    			if ( $host->{hostname} eq $item->{destination} ) { $destinationip=$host->{hostaddress}; $muti_dest=1; }
