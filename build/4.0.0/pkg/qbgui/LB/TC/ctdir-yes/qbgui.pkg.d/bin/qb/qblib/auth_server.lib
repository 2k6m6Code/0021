        else
            myform.enabled.value= '0';
        
        myform.name.value=oo.value;
//        myform.submit();
	goSubmit('ENABLED');
    }
    
    function delSchedule()
    {
//        myform.action.value='DELET';
//        myform.submit();
	goSubmit('DELET');
    }
    </script>
    
scriptSchedule
}
