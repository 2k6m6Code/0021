# machine-type   interface ip     netmask      broadcast      hostname
#------------------------------------------------------------------------
### AFS2000/HS
#---------------------------------------------------------------------------
HAN1 eth3 192.168.1.253 255.255.255.0 192.168.1.255 hostA 
HBN1 eth3 192.168.1.251 255.255.255.0 192.168.1.255 hostB 
#---------------------------------------------------------------------------
### If IP alias module is installed, use alias interface
#---------------------------------------------------------------------------
HASVCA eth3 192.168.1.254 255.255.255.0 192.168.1.255 apserverA 
HBSVCA eth3 192.168.1.254 255.255.255.0 192.168.1.255 apserverB 
#---------------------------------------------------------------------------
### If IP alias module is not installed, use the original interface
#---------------------------------------------------------------------------
