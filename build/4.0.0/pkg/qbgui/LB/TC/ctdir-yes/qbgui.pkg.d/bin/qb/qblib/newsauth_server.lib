        $newschedule{description}=$action{description};

        foreach my $sh ( @$schlist )
        {
            if ( $sh->{schname} eq $action{schname} )
            {
                $exist=1;
                $sh=\%newschedule;
            }
        }
        if ( $exist eq '0' )
        {
            push( @$schlist, \%newschedule); 
            @$schlist=sort byName @$schlist;
        }
        #@$schlist=sort byName @$schlist;
        
