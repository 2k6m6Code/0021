sub timeSelect()
{
    my $time=shift;
   
    foreach my $seq ( 0..23 )
    {
         my $tm=$seq.":00";
         my $status = ( $time eq $tm ) ? ( "selected" ) : ( "" );
         print qq (<option $status value="$tm" >$tm</option>);
         my $tm=$seq.":30";
         my $status = ( $time eq $tm ) ? ( "selected" ) : ( "" );
         print qq (<option $status value="$tm" >$tm</option>);
    }
    my $status = ( $time eq "23:59" ) ? ( "selected" ) : ( "" );
    print qq (<option $status value="23:59" >23:59</option>);
}
